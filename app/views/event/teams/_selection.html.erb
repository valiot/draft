<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-lg-4 col-lg-offset-4">
  <h2 class="title">Elige un problema</h2>
  <% @teams.each do |t| %>
  <div class="card tag-form text-xs-center" id="team-<%= t.id %>">
    <div class="card-block">
      <h4 class="card-title"><%= t.name %></h4>
    </div>
    <% if t.leader %>
    <ul class="list-group list-group-flush">
      <li class="list-group-item draft-team-list">
        <h6 class="card-subtitle text-muted">LEADER</h6>
        <%= image_tag(t.leader.picture_url, class:"img-circle img-fluid") %>
        <p class="card-text"><%= t.leader.name %></p>
      </li>
      <li class="list-group-item draft-team-list">
        <%= link_to "<i class='draft-check'></i>".html_safe,
                    event_pick_team_path(current_event, t),
                    method: :post, data: { confirm: "EstÃ¡s seguro?" },
                    class: 'btn btn-primary btn-xs invitation-btn' %>
      </li>
    </ul>
  <% end %>
  </div>
  <% end %>
  </div>
</div>
